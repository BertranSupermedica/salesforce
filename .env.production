# Configurações da Aplicação
APP_NAME="Salesforce Laravel"
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=http://seudominio.com

# Oracle Database Configuration - PORTA 411
DB_CONNECTION=oracle
DB_HOST=192.168.0.199
DB_PORT=411
DB_DATABASE=ORCL
DB_USERNAME=AN_MER
DB_PASSWORD=ANMER
DB_CHARSET=AL32UTF8

# Oracle Alternative Connection (análise de mercado)
DB_CONNECTION_ANALISE_MERCADO=oracle
DB_HOST_ANALISE_MERCADO=192.168.0.199
DB_PORT_ANALISE_MERCADO=411
DB_DATABASE_ANALISE_MERCADO=ORCL
DB_USERNAME_ANALISE_MERCADO=AN_MER
DB_PASSWORD_ANALISE_MERCADO=ANMER
DB_CHARSET_ANALISE_MERCADO=AL32UTF8

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Cache & Sessions
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security (Produção)
BCRYPT_ROUNDS=12
HASH_DRIVER=bcrypt

# Timezone
APP_TIMEZONE=America/Sao_Paulo

# Disable unused services in production
BROADCAST_DRIVER=log
QUEUE_CONNECTION=sync
MAIL_MAILER=log

